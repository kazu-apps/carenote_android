rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(recipientId) {
      return isAuthenticated() && request.auth.uid == recipientId;
    }

    function isMember(recipientId) {
      return isAuthenticated() && exists(/databases/$(database)/documents/careRecipients/$(recipientId)/members/$(request.auth.uid));
    }

    function hasAccess(recipientId) {
      return isOwner(recipientId) || isMember(recipientId);
    }

    // CareRecipient documents
    match /careRecipients/{recipientId} {
      allow read, write: if hasAccess(recipientId);

      // Members sub-collection: read by owner/member, write by owner only
      match /members/{uid} {
        allow read: if hasAccess(recipientId);
        allow write: if isOwner(recipientId);
      }

      match /medications/{medicationId} {
        allow read, write: if hasAccess(recipientId);

        match /logs/{logId} {
          allow read, write: if hasAccess(recipientId);
        }
      }

      match /notes/{noteId} {
        allow read, write: if hasAccess(recipientId);

        match /comments/{commentId} {
          allow read, write: if hasAccess(recipientId);
        }
      }

      match /healthRecords/{recordId} {
        allow read, write: if hasAccess(recipientId);
      }

      match /calendarEvents/{eventId} {
        allow read, write: if hasAccess(recipientId);
      }

      match /tasks/{taskId} {
        allow read, write: if hasAccess(recipientId);
      }
    }

    // User purchases (server-side write only)
    match /users/{uid}/purchases/{token} {
      allow read: if isAuthenticated() && request.auth.uid == uid;
      allow write: if false;
    }
  }
}
