{
  "name": "carenote-functions",
  "private": true,
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "test": "jest --forceExit --testPathPattern=billing",
    "test:rules": "npx firebase emulators:exec --only firestore --project carenote-rules-test \"npx jest --forceExit --testPathPattern=firestore\"",
    "test:all": "npm test && npm run test:rules",
    "lint": "tsc --noEmit"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^13.0.0",
    "firebase-functions": "^6.3.0",
    "googleapis": "^148.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.0",
    "@types/jest": "^29.5.0",
    "firebase": "^11.0.0",
    "firebase-tools": "^15.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.0"
  }
}
